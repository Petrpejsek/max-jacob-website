<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%
      // This template is often fed a "company_name" derived from a domain (no spaces).
      // Normalize it so it never overflows in the hero/header and doesn't duplicate "Plumbing".
      const SERVICE_LABEL = 'Plumbing';

      function escapeRegExp(str) {
        return String(str).replace(/[.*+?^${}()|[\]\\]/g, '\\$&');
      }

      function titleCaseIfAllCapsOrLower(str) {
        const s = String(str || '').trim();
        if (!s) return s;
        if (s !== s.toLowerCase() && s !== s.toUpperCase()) return s;
        return s
          .split(' ')
          .filter(Boolean)
          .map((w) => (w.length ? w[0].toUpperCase() + w.slice(1).toLowerCase() : w))
          .join(' ');
      }

      function normalizeCompanyName(raw, { nicheHint, cityHint } = {}) {
        let s = String(raw || '').trim();
        if (!s) return 'Your Company';

        // Strip URL -> host -> base label (bestplumbingorlando.com -> bestplumbingorlando)
        s = s.replace(/^https?:\/\//i, '').replace(/^www\./i, '').trim();
        s = s.split(/[/?#]/)[0];
        s = s.replace(/:\d+$/, '');
        if (!/\s/.test(s) && s.includes('.')) s = s.split('.')[0];

        // Normalize separators and camelCase
        s = s.replace(/[_-]+/g, ' ');
        s = s.replace(/([a-z])([A-Z])/g, '$1 $2');

        // Insert spaces around likely word boundaries (niche + city)
        const hintTokens = []
          .concat(String(nicheHint || '').split(/\s+/))
          .concat(String(cityHint || '').split(/\s+/))
          .map((t) => String(t).replace(/[^a-z0-9]/gi, ''))
          .filter((t) => t.length >= 3);

        hintTokens.forEach((token) => {
          const re = new RegExp(escapeRegExp(token), 'ig');
          s = s.replace(re, (m) => ` ${m} `);
        });

        s = s.replace(/\s+/g, ' ').trim();
        s = titleCaseIfAllCapsOrLower(s);
        return s || 'Your Company';
      }

      const RAW_NAME_INPUT =
        (branding && (branding.company_name || branding.domain || branding.website)) ||
        (job && job.website) ||
        'Your Company';
      const NICHE_HINT = (job && job.niche) ? String(job.niche) : SERVICE_LABEL;
      const CITY_HINT = (nap && nap.city) ? String(nap.city) : ((job && job.city) ? String(job.city) : '');

      const BUSINESS_NAME = normalizeCompanyName(RAW_NAME_INPUT, { nicheHint: NICHE_HINT, cityHint: CITY_HINT });
      const BUSINESS_WORDS = BUSINESS_NAME.split(/\s+/).filter(Boolean);
      const BUSINESS_INCLUDES_SERVICE = BUSINESS_NAME.toLowerCase().includes(SERVICE_LABEL.toLowerCase());
    %>

    <title><%= BUSINESS_NAME %> | Licensed & Trusted Plumbing</title>
    <meta name="description" content="Trusted plumbing service offering expert repairs, leak detection, drain cleaning, water heaters & emergency service. Call <%= BUSINESS_NAME %> today!">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body class="bg-white text-slate-900 antialiased overflow-x-hidden" style="font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, 'Apple Color Emoji', 'Segoe UI Emoji';">
    <%
      const FALLBACK_PHONE = '(555) 555-0123';
      const FALLBACK_EMAIL = 'hello@example.com';
      const FALLBACK_HOURS = 'Mon‚ÄìFri 8am‚Äì6pm';
      const FALLBACK_ADDRESS = `123 Main St, ${(nap.city || job.city || 'Your City')}, ST 00000`;

      // Never render an "incomplete" preview ‚Äî use safe placeholders when scrape data is missing.
      const PRIMARY_PHONE = (nap.phone && String(nap.phone).trim()) ? nap.phone : FALLBACK_PHONE;
      const TEXT_PHONE = (nap.text_phone && String(nap.text_phone).trim()) ? nap.text_phone : PRIMARY_PHONE;
      const EMAIL = (nap.email && String(nap.email).trim()) ? nap.email : FALLBACK_EMAIL;
      const ADDRESS = (nap.address && String(nap.address).trim()) ? nap.address : FALLBACK_ADDRESS;
      const HOURS = (nap.hours && String(nap.hours).trim()) ? nap.hours : FALLBACK_HOURS;
      const LICENSE = trust.license || (Array.isArray(trust.certifications) && trust.certifications[0]) || '';
      const displayCity = nap.city || job.city || 'your area';

      // Brand display name (prevents long/garbage scraped names in the UI)
      function toWordTokens(str) {
        const normalized = String(str || '').replace(/[‚Äô‚Äò]/g, "'"); // normalize curly apostrophes
        const m = normalized.match(/[A-Za-z0-9']+/g);
        return (m || []).map((t) => String(t).trim()).filter(Boolean);
      }

      function makePossessive(city) {
        const c = titleCaseIfAllCapsOrLower(String(city || '').trim());
        if (!c) return '';
        return /s$/i.test(c) ? `${c}'` : `${c}'s`;
      }

      function buildBrandDisplayName(businessName, cityHint, serviceLabel) {
        const service = String(serviceLabel || '').trim() || 'Service';
        const city = titleCaseIfAllCapsOrLower(String(cityHint || '').trim());
        const possessiveCity = makePossessive(city);

        const tokens = toWordTokens(businessName);
        const cityTokens = toWordTokens(city).map((t) => t.toLowerCase());

        const serviceTokens = new Set([
          service.toLowerCase(),
          `${service.toLowerCase()}s`,
          // Plumbing template synonyms
          'plumbing',
          'plumber',
          'plumbers',
          'plumbingservice',
          'plumbingservices',
        ]);

        const stop = new Set([
          // filler
          'the', 'and', 'of', 'a', 'an',
          // legal / suffixes
          'llc', 'inc', 'co', 'company', 'corp', 'corporation', 'ltd', 'limited', 'group',
          // marketing noise
          'best', 'top', 'rated', 'affordable', 'cheap', 'local', 'near', 'me', 'same', 'day',
          'pro', 'pros', 'expert', 'experts', 'specialist', 'specialists', 'solutions', 'support', 'services', 'service',
        ]);

        const norm = (t) => String(t || '').toLowerCase().replace(/^'+|'+$/g, '');

        // If the business name already contains a possessive city form (Orlando's / Orlandos),
        // lock to "City's Plumbing" and ignore other marketing words.
        if (city) {
          const cityLower = city.toLowerCase().replace(/[‚Äô‚Äò]/g, "'").trim();
          const possA = `${cityLower}'s`;
          const possB = `${cityLower.replace(/'/g, '')}s`;
          const hasCityPossessiveToken = tokens.some((t) => {
            const n = norm(t);
            return n === possA || n === possB;
          });
          if (hasCityPossessiveToken && possessiveCity) return `${possessiveCity} ${service}`;
        }

        let cleaned = tokens.filter((t) => {
          const n = norm(t);
          if (!n) return false;
          if (stop.has(n)) return false;
          if (serviceTokens.has(n)) return false;

          // Remove city tokens (Orlando / Miami / North / etc)
          const nCityStripped = n.replace(/'s$/i, '');
          if (cityTokens.includes(nCityStripped)) return false;
          return true;
        });

        // De-dupe
        const seen = new Set();
        cleaned = cleaned.filter((t) => {
          const n = norm(t);
          if (seen.has(n)) return false;
          seen.add(n);
          return true;
        });

        const brand = titleCaseIfAllCapsOrLower(cleaned.slice(0, 2).join(' ').trim());
        const full = brand ? `${brand} ${service}` : '';

        // Fallback if brand missing or too long
        if (!brand || brand.length < 2 || full.length > 28) {
          if (possessiveCity) return `${possessiveCity} ${service}`;
          return service;
        }

        return full;
      }

      const BRAND_NAME = buildBrandDisplayName(BUSINESS_NAME, (job && job.city) ? String(job.city) : displayCity, SERVICE_LABEL);
      const BRAND_WORDS = BRAND_NAME.split(/\s+/).filter(Boolean);

      // UI-safe phone formatting:
      // - prevents ugly breaks at hyphens (use non‚Äëbreaking hyphen)
      // - adds spaces at sane wrap points for narrow screens
      function formatPhoneForUi(raw) {
        const original = String(raw || '').trim();
        if (!original) return original;
        const digits = original.replace(/\D/g, '');
        const NBH = '‚Äë'; // non-breaking hyphen (U+2011)

        // US/CA formatting (10 digits) or +1 (11 digits starting with 1)
        if (digits.length === 11 && digits.startsWith('1')) {
          const area = digits.slice(1, 4);
          const prefix = digits.slice(4, 7);
          const line = digits.slice(7, 11);
          return `+1 (${area}) ${prefix}${NBH}${line}`;
        }
        if (digits.length === 10) {
          const area = digits.slice(0, 3);
          const prefix = digits.slice(3, 6);
          const line = digits.slice(6, 10);
          return `(${area}) ${prefix}${NBH}${line}`;
        }

        // Fallback: normalize whitespace and prevent hyphen-wrapping
        return original.replace(/\s+/g, ' ').replace(/-/g, NBH);
      }

      const PRIMARY_PHONE_UI = formatPhoneForUi(PRIMARY_PHONE);
      const TEXT_PHONE_UI = formatPhoneForUi(TEXT_PHONE);
      
      // Clean nav links - remove duplicates, long text, and company name
      const cleanNavLinks = (menu && menu.length) ? menu.slice(0, 8)
        .map((m) => {
          const text = String(m.text || '').trim();
          // Skip if empty, too long, or contains company name
          if (!text || text.length > 20 || text.toLowerCase().includes(BRAND_NAME.toLowerCase().split(' ')[0])) {
            return null;
          }
          return { name: text, href: m.url || '#' };
        })
        .filter(Boolean)
        .filter((link, index, self) => 
          // Remove duplicates by name
          index === self.findIndex(l => l.name.toLowerCase() === link.name.toLowerCase())
        )
        .slice(0, 5) : [];
      
      const navLinks = cleanNavLinks.length >= 3 ? cleanNavLinks : [
        { name: 'Services', href: '#services' },
        { name: 'Emergency', href: '#emergency' },
        { name: 'Reviews', href: '#reviews' },
        { name: 'Service Area', href: '#service-area' },
        { name: 'Contact', href: '#contact' },
      ];

      // Service area headline prefers "County" (truth from JSON-LD) if available
      const areaHeadline = serviceArea && serviceArea.primary_area ? serviceArea.primary_area : displayCity;
      const areaSecondary = serviceArea && serviceArea.secondary_area ? serviceArea.secondary_area : null;

      // Plumbing-specific fallback services (if scraped services are generic/missing)
      const plumbingFallbackServices = [
        { title: 'Water Heater Repair', description: 'Fast diagnosis and repair of all water heater types. Same-day service available.' },
        { title: 'Drain Cleaning', description: 'Professional drain cleaning and clog removal. Camera inspection available.' },
        { title: 'Leak Detection', description: 'Advanced leak detection technology to find hidden leaks and prevent damage.' },
        { title: 'Sewer Line Repair', description: 'Sewer line inspection, repair, and replacement. Trenchless options available.' },
        { title: 'Fixture Installation', description: 'Expert installation of faucets, toilets, sinks, and all plumbing fixtures.' },
        { title: '24/7 Emergency Service', description: 'Round-the-clock emergency plumbing response for urgent issues.' }
      ];
      
      // Use scraped services if they look real, otherwise use plumbing-specific fallback
      const isGenericService = (s) => {
        const generic = ['professional service', 'expert solutions', 'reliable support', 'local specialists'];
        return generic.some(g => (s.title || '').toLowerCase().includes(g));
      };
      const hasRealServices = services && services.length > 0 && !isGenericService(services[0]);
      const finalServices = hasRealServices ? services : plumbingFallbackServices;

      // Review examples (template-only). We keep them as examples but tailor city/company/service variables.
      const reviewCityFallbacks = (serviceArea && Array.isArray(serviceArea.cities) && serviceArea.cities.length)
        ? serviceArea.cities
        : [displayCity];
      const reviewService = (finalServices && finalServices[0] && finalServices[0].title) ? finalServices[0].title : (job.niche || 'plumbing');
      const reviews = [
        { id: '1', name: "Jordan P.", city: reviewCityFallbacks[0] || displayCity, text: `Fast response in ${reviewCityFallbacks[0] || displayCity}. Texted a photo of my issue and ${BRAND_NAME} helped fast. Lifesavers!`, source: 'Google' },
        { id: '2', name: "Sarah L.", city: reviewCityFallbacks[1] || displayCity, text: `Honest pricing and clear communication. Highly recommend ${BRAND_NAME} for anyone in ${reviewCityFallbacks[1] || displayCity}.`, source: 'Yelp' },
        { id: '3', name: "Mike D.", city: reviewCityFallbacks[2] || displayCity, text: `Professional and clean. They handled my ${reviewService.toLowerCase()} quickly and respectfully.`, source: 'Google' },
        { id: '4', name: "David K.", city: reviewCityFallbacks[3] || displayCity, text: `Smooth process from start to finish. Great communication and quality work.`, source: 'Google' },
        { id: '5', name: "Linda R.", city: reviewCityFallbacks[4] || displayCity, text: `Emergency issue and they responded immediately. Best service experience I've had.`, source: 'Yelp' },
        { id: '6', name: "Robert S.", city: reviewCityFallbacks[5] || displayCity, text: `Fair price and great work. They kept me updated the whole time.`, source: 'Google' },
      ];
    %>
    
    <!-- NAVBAR (1:1 layout from provided template) -->
    <nav id="header" class="sticky top-0 z-50 bg-white shadow-md border-b border-slate-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-[80px] md:h-[96px]">
          <!-- Logo -->
          <div class="flex-shrink-0 flex items-center">
            <a href="#" class="flex items-center gap-3">
              <div class="leading-none">
                <span class="text-xl md:text-2xl font-black tracking-tight text-blue-700 whitespace-nowrap max-w-[360px] truncate" title="<%= BRAND_NAME %>"><%= BRAND_NAME.toUpperCase() %></span>
              </div>
            </a>
          </div>

          <!-- Desktop Nav & CTAs -->
          <div class="hidden lg:flex items-center space-x-8">
            <div class="flex space-x-6">
              <% navLinks.forEach((link) => { %>
                <a href="<%= link.href %>" class="text-sm font-semibold text-slate-600 hover:text-blue-600 transition-colors">
                  <%= link.name %>
                </a>
              <% }); %>
            </div>
            <div class="flex items-center space-x-3">
              <% if (TEXT_PHONE) { %>
                <a href="sms:<%= TEXT_PHONE %>" class="flex items-center space-x-2 bg-slate-100 text-slate-900 px-4 py-2 rounded-full text-sm font-bold hover:bg-slate-200 transition-all border border-slate-200">
                  <span class="text-blue-600 font-black">‚úâ</span>
                  <span>Text</span>
                </a>
              <% } %>
              <% if (PRIMARY_PHONE) { %>
                <a href="tel:<%= PRIMARY_PHONE %>" class="flex items-center space-x-2 bg-blue-600 text-white px-6 py-2.5 rounded-full text-sm font-bold hover:bg-blue-700 transition-all shadow-lg shadow-blue-200 whitespace-nowrap">
                  <span class="font-black">‚òé</span>
