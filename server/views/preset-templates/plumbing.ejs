        </div>
      </div>

      <!-- Mobile Menu -->
      <div id="mobileMenu" class="lg:hidden hidden bg-white border-t border-slate-100 py-4 px-4 space-y-3">
        <div class="grid grid-cols-2 gap-3 mb-6">
          <% if (PRIMARY_PHONE) { %>
            <a href="tel:<%= PRIMARY_PHONE %>" class="flex flex-col items-center justify-center bg-blue-600 text-white p-4 rounded-2xl shadow-sm text-center">
              <span class="text-2xl mb-2">‚òé</span>
              <span class="text-xs font-bold uppercase tracking-wider">Call Now</span>
            </a>
          <% } %>
          <% if (TEXT_PHONE) { %>
            <a href="sms:<%= TEXT_PHONE %>" class="flex flex-col items-center justify-center bg-slate-100 text-slate-900 p-4 rounded-2xl border border-slate-200 text-center">
              <span class="text-2xl mb-2">‚úâ</span>
              <span class="text-xs font-bold uppercase tracking-wider">Text Now</span>
            </a>
          <% } %>
        </div>
        <% navLinks.forEach((link) => { %>
          <a href="<%= link.href %>" class="block px-4 py-3 text-lg font-bold text-slate-800 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition-colors mobile-link">
            <%= link.name %>
          </a>
        <% }); %>
      </div>
    </nav>

    <!-- HERO -->
