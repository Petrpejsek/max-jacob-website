  </div>
</div>

<!-- Lightbox -->
<div class="lightbox" id="lightbox">
  <div class="lightbox-close">Ã—</div>
  <img id="lightboxImg" src="" alt="">
</div>

<script>
  // Scroll messages
  (function() {
    const m = document.getElementById('messagesList');
    if (m) m.scrollTop = m.scrollHeight;
  })();

  // â”€â”€ Live updates: poll for new messages and re-render â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function escapeHtml(s) {
    if (s == null) return ''; s = String(s);
    return s.replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;').replace(/"/g,'&quot;');
  }
  function renderAtt(att) {
    var url = '/public/' + escapeHtml(att.filename);
    var name = escapeHtml(att.original_name);
    var size = Math.round((att.size||0)/1024) + ' KB';
    var m = att.mime_type || '';
    if (m.indexOf('image/') === 0 && m !== 'image/heic') {
      return '<div class="att-image"><img src="'+url+'" alt="'+name+'" loading="lazy" onclick="openLightbox(\''+url.replace(/'/g,"\\'")+'\')"></div>';
    }
    if (m === 'image/heic') {
      return '<div class="att-file"><a href="'+url+'" download="'+name+'"><span>ğŸ–¼ï¸</span><div><div class="att-file-name">'+name+' (HEIC)</div><div class="att-file-size">'+size+'</div></div></a></div>';
    }
    if (m.indexOf('video/') === 0) {
      return '<div class="att-video"><video controls preload="metadata"><source src="'+url+'" type="'+escapeHtml(m)+'"></video></div>';
    }
    var icon = m === 'application/pdf' ? 'ğŸ“„' : (m.indexOf('word')>=0 ? 'ğŸ“' : (m.indexOf('excel')>=0 ? 'ğŸ“Š' : (m.indexOf('zip')>=0 ? 'ğŸ—œï¸' : 'ğŸ“')));
    return '<div class="att-file"><a href="'+url+'" download="'+name+'"><span>'+icon+'</span><div><div class="att-file-name">'+name+'</div><div class="att-file-size">'+size+'</div></div></a></div>';
  }
  function renderMessages(messages, clientName) {
    var clientInitial = (clientName || '').charAt(0).toUpperCase();
    if (!messages || messages.length === 0) {
      return '<div class="empty-chat"><svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg><span>No messages yet</span></div>';
    }
    var html = '<div class="messages" id="messagesList"><div class="date-sep">' + new Date(messages[0].created_at).toLocaleDateString('en-GB', { day: 'numeric', month: 'long', year: 'numeric' }) + '</div>';
    for (var i = 0; i < messages.length; i++) {
      var msg = messages[i];
      var isAdmin = msg.sender === 'admin';
      var showSender = i === 0 || messages[i-1].sender !== msg.sender;
      html += '<div class="msg-row ' + (isAdmin ? 'mine' : '') + '">';
      html += isAdmin ? '<div class="avatar avatar-admin">MJ</div>' : '<div class="avatar avatar-client">' + escapeHtml(clientInitial) + '</div>';
      html += '<div class="msg-col">';
      if (showSender) html += '<div class="msg-sender">' + (isAdmin ? 'You' : escapeHtml(clientName)) + '</div>';
      if (msg.body) html += '<div class="bubble ' + (isAdmin ? 'bubble-admin' : 'bubble-client') + '">' + escapeHtml(msg.body).replace(/\n/g,'<br>') + '</div>';
      if (msg.attachments && msg.attachments.length) {
        html += '<div class="attachments">';
        for (var j = 0; j < msg.attachments.length; j++) html += renderAtt(msg.attachments[j]);
        html += '</div>';
      }
      html += '<div class="msg-time">' + new Date(msg.created_at).toLocaleTimeString('en-GB', { hour: '2-digit', minute: '2-digit' }) + '</div>';
      html += '</div></div>';
    }
    html += '</div>';
    return html;
  }
  (function pollMessages() {
    var container = document.getElementById('messagesContainer');
    var messagesUrl = container && container.getAttribute('data-messages-url');
    var lastCount = 0;
    try {
      var init = JSON.parse(document.getElementById('admin-deal-thread-init').textContent);
      lastCount = (init.messages || []).length;
    } catch (e) {}
    if (messagesUrl) {
      setInterval(function() {
        fetch(messagesUrl, { credentials: 'same-origin' }).then(function(r) { return r.json(); }).then(function(data) {
          var messages = data.messages || [];
          if (messages.length !== lastCount) {
            lastCount = messages.length;
            try {
              var init = JSON.parse(document.getElementById('admin-deal-thread-init').textContent);
              container.innerHTML = renderMessages(messages, init.clientName);
              var list = document.getElementById('messagesList');
              if (list) list.scrollTop = list.scrollHeight;
            } catch (err) {}
          }
        }).catch(function() {});
      }, 2500);
    }
  })();

  // â”€â”€ Files â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  let selectedFiles = [];
  function addFiles(list) { selectedFiles = selectedFiles.concat(Array.from(list)); renderChips(); }
  var MAX_CLIENT_FILE_SIZE = 100 * 1024 * 1024; // 100 MB â€” matches server limit

  // Bind via addEventListener (more reliable than inline onchange on iOS Safari)
  document.getElementById('attachInput')?.addEventListener('change', function() {
    if (!this.files || !this.files.length) return;
    for (var i = 0; i < this.files.length; i++) {
      if (this.files[i].size > MAX_CLIENT_FILE_SIZE) {
        var sizeMB = Math.round(this.files[i].size / 1024 / 1024);
        alert('File "' + this.files[i].name + '" is too large (' + sizeMB + ' MB). Maximum is 100 MB.');
        return;
      }
    }
    addFiles(this.files);
    // Do NOT clear this.value on mobile (iOS): it invalidates File refs so send fails
  });

  function renderChips() {
    const wrap = document.getElementById('fileChips');
    if (!wrap) return;
    wrap.innerHTML = '';
    // Render chips first â€” independent of DataTransfer so it always works on mobile
    selectedFiles.forEach((f, i) => {
      const chip = document.createElement('div');
      chip.className = 'file-chip';
      const name = document.createElement('span');
      name.style.cssText = 'max-width:130px;overflow:hidden;text-overflow:ellipsis;white-space:nowrap;';
      name.textContent = f.name;
      const rm = document.createElement('span');
      rm.className = 'file-chip-remove';
      rm.setAttribute('data-idx', i);
      rm.setAttribute('title', 'Remove');
      rm.textContent = 'Ã—';
      chip.appendChild(name);
      chip.appendChild(rm);
      wrap.appendChild(chip);
    });
    // NOTE: Do NOT sync inp.files via DataTransfer â€” on iOS Safari it invalidates
    // the original File object temp references, causing FormData to send empty data.
    // Form submission uses selectedFiles array directly (via fetch + FormData), so
    // the native input's FileList is irrelevant.
  }

  document.getElementById('fileChips')?.addEventListener('click', e => {
    const btn = e.target.closest('.file-chip-remove');
    if (!btn) return;
    const idx = parseInt(btn.getAttribute('data-idx'), 10);
    if (!isNaN(idx)) { selectedFiles.splice(idx, 1); renderChips(); }
  });

  // â”€â”€ Drag & drop â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  let dragDepth = 0;
  const overlay = document.getElementById('dropOverlay');
  const box = document.getElementById('composerBox');

  document.addEventListener('dragenter', e => {
    if (!e.dataTransfer.types.includes('Files')) return;
    dragDepth++;
    overlay?.classList.add('active');
  });
  document.addEventListener('dragleave', () => {
    if (--dragDepth <= 0) { dragDepth = 0; overlay?.classList.remove('active'); }
  });
  document.addEventListener('dragover', e => { if (e.dataTransfer.types.includes('Files')) e.preventDefault(); });
  document.addEventListener('drop', e => {
    e.preventDefault(); dragDepth = 0;
    overlay?.classList.remove('active'); box?.classList.remove('drag-over');
    if (e.dataTransfer?.files?.length) { addFiles(e.dataTransfer.files); box?.scrollIntoView({ behavior: 'smooth', block: 'end' }); }
  });
  box?.addEventListener('dragover', e => { e.preventDefault(); box.classList.add('drag-over'); });
  box?.addEventListener('dragleave', () => box.classList.remove('drag-over'));
  box?.addEventListener('drop', e => {
    e.preventDefault(); e.stopPropagation();
    dragDepth = 0; overlay?.classList.remove('active'); box.classList.remove('drag-over');
    if (e.dataTransfer?.files?.length) addFiles(e.dataTransfer.files);
  });

  // â”€â”€ Submit (FormData + fetch so attachments are always sent) â”€â”€â”€
  function handleEnterKey(e) {
    if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') { e.preventDefault(); document.getElementById('composeForm')?.requestSubmit(); }
  }
  document.getElementById('composeForm')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    const body = (document.getElementById('bodyInput')?.value || '').trim();
    if (!body && !selectedFiles.length) return;
    const formEl = document.getElementById('composeForm');
    const btn = document.getElementById('sendBtn');
    if (btn) { btn.disabled = true; btn.textContent = 'Sendingâ€¦'; }
    const formData = new FormData();
    formData.append('body', body);
    selectedFiles.forEach((f) => formData.append('attachments', f));
    try {
      const resp = await fetch(formEl.action, { method: 'POST', body: formData, credentials: 'same-origin' });
      if (resp.redirected) { window.location.href = resp.url; return; }
      const url = new URL(resp.url);
      const errMsg = url.searchParams.get('error') || (resp.ok ? '' : 'Send failed');
      if (errMsg) window.location.href = formEl.action.replace(/\/messages$/, '') + '?error=' + encodeURIComponent(errMsg);
      else window.location.href = formEl.action.replace(/\/messages$/, '') + '?success=1';
    } catch (err) {
      if (btn) { btn.disabled = false; btn.textContent = 'Send to Client'; }
      window.location.href = formEl.action.replace(/\/messages$/, '') + '?error=' + encodeURIComponent(err.message || 'Network error');
    }
  });

  // â”€â”€ Copy link â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
  function copyLink() {
    navigator.clipboard.writeText(document.getElementById('magicLinkInput').value).then(() => {
      const btn = document.querySelector('.copy-btn');
      const orig = btn.textContent;
      btn.textContent = 'Copied!';
      setTimeout(() => { btn.textContent = orig; }, 2000);
    });
  }

  // â”€â”€ Lightbox (event delegation â€” works reliably after polling DOM replacement) â”€â”€
  function openLightbox(src) {
    var lb = document.getElementById('lightbox');
    var img = document.getElementById('lightboxImg');
    if (!lb || !img) return;
    img.src = src;
    lb.classList.add('open');
  }
  function closeLightbox() {
    var lb = document.getElementById('lightbox');
    if (lb) lb.classList.remove('open');
  }

  document.addEventListener('click', function(e) {
    var img = e.target.closest ? e.target.closest('.att-image img') : null;
    if (!img && e.target.tagName === 'IMG' && e.target.parentElement && e.target.parentElement.classList.contains('att-image')) {
      img = e.target;
    }
    if (img) {
      e.preventDefault();
      e.stopPropagation();
      openLightbox(img.src);
      return;
    }
    var lb = document.getElementById('lightbox');
    if (lb && lb.classList.contains('open')) {
      if (e.target === lb || e.target.classList.contains('lightbox-close')) {
        closeLightbox();
      }
    }
  });
  document.addEventListener('keydown', function(e) { if (e.key === 'Escape') closeLightbox(); });
</script>
