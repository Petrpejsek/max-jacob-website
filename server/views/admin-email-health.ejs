<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Email Health Dashboard</title>
    <style>
      :root {
        --bg: #0b1220;
        --card: #0f172a;
        --muted: rgba(255, 255, 255, 0.72);
        --border: rgba(255, 255, 255, 0.10);
        --btn: rgba(255, 255, 255, 0.10);
        --btnHover: rgba(255, 255, 255, 0.18);
        --success: #10b981;
        --warning: #f59e0b;
        --error: #ef4444;
        --info: #3b82f6;
        --sans: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
      }
      body {
        font-family: var(--sans);
        margin: 0;
        padding: 24px;
        background: var(--bg);
        color: #e5e7eb;
        min-height: 100vh;
      }
      a { color: #93c5fd; text-decoration: none; }
      a:hover { text-decoration: underline; }
      .top {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        margin-bottom: 24px;
      }
      .card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 20px;
      }
      .muted { color: var(--muted); }
      .btn {
        border: 1px solid var(--border);
        background: var(--btn);
        color: #e5e7eb;
        border-radius: 10px;
        padding: 10px 16px;
        cursor: pointer;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.2s;
      }
      .btn:hover { background: var(--btnHover); }
      .btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
      }
      .btn-primary {
        background: #3b82f6;
        border-color: #3b82f6;
      }
      .btn-primary:hover {
        background: #2563eb;
      }
      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        margin-bottom: 24px;
      }
      .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
      }
      .status-healthy {
        background: rgba(16, 185, 129, 0.15);
        color: var(--success);
        border: 1px solid rgba(16, 185, 129, 0.3);
      }
      .status-warning {
        background: rgba(245, 158, 11, 0.15);
        color: var(--warning);
        border: 1px solid rgba(245, 158, 11, 0.3);
      }
      .status-unhealthy {
        background: rgba(239, 68, 68, 0.15);
        color: var(--error);
        border: 1px solid rgba(239, 68, 68, 0.3);
      }
      .status-pass {
        color: var(--success);
        font-weight: 600;
      }
      .status-fail {
        color: var(--error);
        font-weight: 600;
      }
      .status-info {
        color: var(--info);
      }
      .check-item {
        padding: 16px;
        border: 1px solid var(--border);
        border-radius: 10px;
        margin-bottom: 12px;
        background: rgba(0,0,0,0.2);
      }
      .check-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 8px;
      }
      .check-title {
        font-size: 16px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      .check-icon {
        font-size: 20px;
      }
      .check-details {
        font-size: 13px;
        line-height: 1.6;
        margin-top: 8px;
      }
      .check-record {
        font-family: 'Courier New', monospace;
        font-size: 12px;
        background: rgba(0,0,0,0.3);
        padding: 8px;
        border-radius: 6px;
        margin-top: 8px;
        word-break: break-all;
      }
      .recommendation {
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 10px;
        border-left: 3px solid;
      }
      .rec-high {
        background: rgba(239, 68, 68, 0.1);
        border-color: var(--error);
      }
      .rec-medium {
        background: rgba(245, 158, 11, 0.1);
        border-color: var(--warning);
      }
      .rec-low {
        background: rgba(59, 130, 246, 0.1);
        border-color: var(--info);
      }
      .rec-info {
        background: rgba(16, 185, 129, 0.1);
        border-color: var(--success);
      }
      .rec-title {
        font-weight: 700;
        margin-bottom: 4px;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .rec-description {
        font-size: 13px;
        color: var(--muted);
        margin-bottom: 6px;
      }
      .rec-action {
        font-size: 13px;
        font-family: 'Courier New', monospace;
        background: rgba(0,0,0,0.3);
        padding: 6px 8px;
        border-radius: 4px;
        margin-top: 6px;
      }
      .spinner {
        display: inline-block;
        width: 16px;
        height: 16px;
        border: 2px solid var(--border);
        border-top-color: #93c5fd;
        border-radius: 50%;
        animation: spin 0.6s linear infinite;
      }
      @keyframes spin {
        to { transform: rotate(360deg); }
      }
      .hidden {
        display: none;
      }
      .meta {
        font-size: 12px;
        color: var(--muted);
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid var(--border);
      }
      .alert {
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        color: #93c5fd;
      }
      .alert-error {
        background: rgba(239, 68, 68, 0.1);
        border-color: rgba(239, 68, 68, 0.3);
        color: #fca5a5;
      }
    </style>
  </head>
  <body>
    <div class="top">
      <div>
        <div style="font-size: 24px; font-weight: 800;">üìß Email Health Dashboard</div>
        <div class="muted" style="margin-top: 4px;">
          Monitor email deliverability and DNS configuration
        </div>
      </div>
      <div style="display:flex; gap: 8px;">
        <button class="btn btn-primary" id="refreshBtn">
          <span id="refreshIcon">üîÑ</span> Check Health
        </button>
        <a class="btn" href="/admin">‚Üê Back to Admin</a>
      </div>
    </div>

    <div id="alertContainer"></div>

    <div id="loadingState" class="hidden">
      <div class="card">
        <div style="display: flex; align-items: center; gap: 12px;">
          <div class="spinner"></div>
          <div>Running email health checks...</div>
        </div>
      </div>
    </div>

    <div id="healthReport" class="hidden">
      <!-- Overall Status Card -->
      <div class="card">
        <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 16px;">
          <div>
            <div style="font-size: 18px; font-weight: 700; margin-bottom: 8px;">Overall Status</div>
            <div id="overallMessage" class="muted"></div>
          </div>
          <div id="overallBadge"></div>
        </div>
        <div class="meta">
          <div><strong>Last checked:</strong> <span id="timestamp"></span></div>
          <div><strong>Check duration:</strong> <span id="duration"></span></div>
        </div>
      </div>

      <!-- DNS Checks Grid -->
      <div class="grid">
        <!-- SPF Check -->
        <div class="card">
          <div class="check-item">
            <div class="check-header">
              <div class="check-title">
                <span class="check-icon">üìù</span>
                SPF Record
              </div>
              <div id="spfStatus"></div>
            </div>
            <div id="spfMessage" class="check-details muted"></div>
            <div id="spfRecord" class="check-record hidden"></div>
            <div id="spfDetails" class="check-details hidden" style="margin-top: 8px; color: var(--warning);"></div>
          </div>
        </div>

        <!-- DKIM Check -->
        <div class="card">
          <div class="check-item">
            <div class="check-header">
              <div class="check-title">
                <span class="check-icon">üîê</span>
                DKIM Signature
              </div>
              <div id="dkimStatus"></div>
            </div>
            <div id="dkimMessage" class="check-details muted"></div>
            <div id="dkimRecord" class="check-record hidden"></div>
            <div id="dkimDetails" class="check-details hidden" style="margin-top: 8px; color: var(--warning);"></div>
          </div>
        </div>

        <!-- DMARC Check -->
        <div class="card">
          <div class="check-item">
            <div class="check-header">
              <div class="check-title">
                <span class="check-icon">üõ°Ô∏è</span>
                DMARC Policy
              </div>
              <div id="dmarcStatus"></div>
            </div>
            <div id="dmarcMessage" class="check-details muted"></div>
            <div id="dmarcRecord" class="check-record hidden"></div>
            <div id="dmarcDetails" class="check-details hidden" style="margin-top: 8px; color: var(--warning);"></div>
          </div>
        </div>

        <!-- Resend Status -->
        <div class="card">
          <div class="check-item">
            <div class="check-header">
              <div class="check-title">
                <span class="check-icon">üì¨</span>
                Resend Status
              </div>
              <div id="resendStatus"></div>
            </div>
            <div id="resendMessage" class="check-details muted"></div>
            <div id="resendNote" class="check-details hidden" style="margin-top: 8px;"></div>
          </div>
        </div>
      </div>

      <!-- Recommendations -->
      <div class="card">
        <div style="font-size: 18px; font-weight: 700; margin-bottom: 16px;">üìã Recommendations</div>
        <div id="recommendations"></div>
      </div>

      <!-- Quick Links -->
      <div class="card">
        <div style="font-size: 18px; font-weight: 700; margin-bottom: 16px;">üîó Useful Links</div>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 12px;">
          <a href="https://resend.com/domains" target="_blank" class="btn">Resend Dashboard ‚Üí</a>
          <a href="https://mail-tester.com" target="_blank" class="btn">Mail Tester ‚Üí</a>
          <a href="https://mxtoolbox.com/SuperTool.aspx" target="_blank" class="btn">MX Toolbox ‚Üí</a>
          <a href="https://postmaster.google.com" target="_blank" class="btn">Google Postmaster ‚Üí</a>
        </div>
      </div>
    </div>

    <script>
      let healthData = null;

      async function fetchEmailHealth() {
        const refreshBtn = document.getElementById('refreshBtn');
        const refreshIcon = document.getElementById('refreshIcon');
        const loadingState = document.getElementById('loadingState');
        const healthReport = document.getElementById('healthReport');
        const alertContainer = document.getElementById('alertContainer');

        try {
          // Show loading
          refreshBtn.disabled = true;
          refreshIcon.innerHTML = '<span class="spinner"></span>';
          loadingState.classList.remove('hidden');
          healthReport.classList.add('hidden');
          alertContainer.innerHTML = '';

          // Fetch health data
          const response = await fetch('/admin/api/email-health');
          const data = await response.json();

          if (!data.success) {
            throw new Error(data.error || 'Failed to fetch email health');
          }

          healthData = data;
          renderHealthReport(data);

          // Show success
          loadingState.classList.add('hidden');
          healthReport.classList.remove('hidden');

        } catch (error) {
          console.error('Error fetching email health:', error);
          
          loadingState.classList.add('hidden');
          alertContainer.innerHTML = `
            <div class="alert alert-error">
              <strong>Error:</strong> ${error.message}
            </div>
          `;
        } finally {
          refreshBtn.disabled = false;
          refreshIcon.textContent = 'üîÑ';
        }
      }

      function renderHealthReport(data) {
        const { overall, checks, recommendations } = data;

        // Overall status
        const overallBadge = document.getElementById('overallBadge');
        const badgeClass = overall.status === 'healthy' ? 'status-healthy' : 
                          overall.status === 'warning' ? 'status-warning' : 'status-unhealthy';
        const badgeIcon = overall.status === 'healthy' ? '‚úÖ' : 
                         overall.status === 'warning' ? '‚ö†Ô∏è' : '‚ùå';
        overallBadge.innerHTML = `<div class="status-badge ${badgeClass}">${badgeIcon} ${overall.status.toUpperCase()}</div>`;
        document.getElementById('overallMessage').textContent = overall.message;
        document.getElementById('timestamp').textContent = new Date(overall.timestamp).toLocaleString();
        document.getElementById('duration').textContent = `${overall.duration_ms}ms`;

        // SPF Check
        renderCheck('spf', checks.spf);
        
        // DKIM Check
        renderCheck('dkim', checks.dkim);
        
        // DMARC Check
        renderCheck('dmarc', checks.dmarc);
        
        // Resend Check
        renderCheck('resend', checks.resend);

        // Recommendations
        renderRecommendations(recommendations);
      }

      function renderCheck(checkName, checkData) {
        const statusEl = document.getElementById(`${checkName}Status`);
        const messageEl = document.getElementById(`${checkName}Message`);
        const recordEl = document.getElementById(`${checkName}Record`);
        const detailsEl = document.getElementById(`${checkName}Details`);

        // Status badge
        const statusClass = checkData.status === 'pass' ? 'status-pass' : 
                           checkData.status === 'warning' ? 'status-warning' : 
                           checkData.status === 'info' ? 'status-info' : 'status-fail';
        const statusIcon = checkData.status === 'pass' ? '‚úÖ' : 
                          checkData.status === 'warning' ? '‚ö†Ô∏è' : 
                          checkData.status === 'info' ? '‚ÑπÔ∏è' : '‚ùå';
        statusEl.innerHTML = `<span class="${statusClass}">${statusIcon}</span>`;

        // Message
        messageEl.textContent = checkData.message;

        // Record (if available and element exists)
        if (recordEl) {
          if (checkData.record) {
            recordEl.textContent = checkData.record;
            recordEl.classList.remove('hidden');
          } else {
            recordEl.classList.add('hidden');
          }
        }

        // Details (if available and element exists)
        if (detailsEl) {
          if (checkData.details) {
            detailsEl.textContent = `‚ö†Ô∏è ${checkData.details}`;
            detailsEl.classList.remove('hidden');
          } else {
            detailsEl.classList.add('hidden');
          }
        }

        // Note (for Resend)
        if (checkName === 'resend' && checkData.note) {
          const noteEl = document.getElementById('resendNote');
          if (noteEl) {
            noteEl.innerHTML = `<a href="${checkData.note.split(': ')[1]}" target="_blank">${checkData.note}</a>`;
            noteEl.classList.remove('hidden');
          }
        }
      }

      function renderRecommendations(recommendations) {
        const container = document.getElementById('recommendations');
        
        if (!recommendations || recommendations.length === 0) {
          container.innerHTML = '<div class="muted">No recommendations at this time.</div>';
          return;
        }

        container.innerHTML = recommendations.map(rec => {
          const priorityClass = rec.priority === 'high' ? 'rec-high' : 
                               rec.priority === 'medium' ? 'rec-medium' : 
                               rec.priority === 'low' ? 'rec-low' : 'rec-info';
          const priorityIcon = rec.priority === 'high' ? 'üî¥' : 
                              rec.priority === 'medium' ? 'üü°' : 
                              rec.priority === 'low' ? 'üîµ' : '‚úÖ';
          
          return `
            <div class="recommendation ${priorityClass}">
              <div class="rec-title">
                ${priorityIcon} ${rec.title}
              </div>
              <div class="rec-description">${rec.description}</div>
              <div class="rec-action">${rec.action}</div>
            </div>
          `;
        }).join('');
      }

      // Event listeners
      document.getElementById('refreshBtn').addEventListener('click', fetchEmailHealth);

      // Load on page load
      window.addEventListener('DOMContentLoaded', fetchEmailHealth);
    </script>
  </body>
</html>
