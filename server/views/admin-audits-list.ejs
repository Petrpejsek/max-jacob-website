<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audit Jobs - Admin</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Arial, sans-serif;
            background: #181828;
            color: #fff;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 32px;
            flex-wrap: wrap;
            gap: 16px;
        }

        h1 {
            font-size: 2.2rem;
            font-weight: bold;
            background: linear-gradient(90deg, #ff7ee7, #6a82fb);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .logout-btn {
            padding: 10px 20px;
            border-radius: 8px;
            background: #181828;
            border: 1.5px solid #2d2d44;
            color: #fff;
            text-decoration: none;
            font-size: 0.95rem;
            transition: background 0.2s;
            cursor: pointer;
        }

        .logout-btn:hover {
            background: #2d2d44;
        }

        .backup-btn {
            padding: 10px 20px;
            border-radius: 8px;
            background: linear-gradient(90deg, #16a34a, #15803d);
            border: none;
            color: #fff;
            font-size: 0.95rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .backup-btn:hover {
            background: linear-gradient(90deg, #15803d, #14532d);
            transform: translateY(-1px);
        }

        .backup-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .table-container {
            background: #23233a;
            border-radius: 16px;
            padding: 24px;
            box-shadow: 0 4px 32px rgba(106,130,251,0.1);
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            text-align: left;
            padding: 12px 16px;
            color: #b6b6d6;
            font-weight: 600;
            font-size: 0.9rem;
            border-bottom: 1px solid #2d2d44;
            white-space: nowrap;
        }

        td {
            padding: 16px;
            border-bottom: 1px solid #2d2d44;
            color: #d1d1e0;
        }

        tr:last-child td {
            border-bottom: none;
        }

        tr:hover {
            background: rgba(106,130,251,0.05);
        }

        .view-link {
            color: #6a82fb;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

        .view-link:hover {
            color: #ff7ee7;
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .badge-status {
            background: linear-gradient(90deg, rgba(255,126,231,0.15), rgba(106,130,251,0.15));
            border: 1px solid rgba(106,130,251,0.3);
            color: #a5b4fc;
        }

        .badge-ready-to-check {
            background: linear-gradient(90deg, rgba(34, 197, 94, 0.22), rgba(74, 222, 128, 0.18));
            border: 1px solid rgba(74, 222, 128, 0.6);
            color: #bbf7d0;
            font-weight: 700;
            letter-spacing: 0.03em;
            text-transform: uppercase;
            box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.12);
        }

        .row-ready-to-check td {
            background: rgba(34, 197, 94, 0.06);
        }

        .row-ready-to-check td:first-child {
            border-left: 3px solid rgba(74, 222, 128, 0.9);
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #b6b6d6;
        }

        .empty-state-icon {
            font-size: 3rem;
            margin-bottom: 16px;
            opacity: 0.5;
        }

        .btn-delete {
            padding: 6px 12px;
            border-radius: 6px;
            background: rgba(220, 38, 38, 0.1);
            border: 1px solid rgba(220, 38, 38, 0.3);
            color: #ff6b6b;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 500;
            transition: all 0.2s;
            cursor: pointer;
            margin-left: 8px;
        }

        .btn-delete:hover {
            background: rgba(220, 38, 38, 0.2);
            border-color: rgba(220, 38, 38, 0.5);
        }

        .action-buttons {
            display: flex;
            align-items: center;
            gap: 8px;
            flex-wrap: wrap;
        }

        .no-email-indicator {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            padding: 3px 8px;
            border-radius: 4px;
            background: rgba(217, 119, 6, 0.1);
            border: 1px solid rgba(217, 119, 6, 0.3);
            color: #fb923c;
            font-size: 0.75rem;
            font-weight: 500;
            white-space: nowrap;
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
                transform: translateX(0);
            }
            to {
                opacity: 0;
                transform: translateX(-20px);
            }
        }

        tr.deleting {
            animation: fadeOut 0.3s ease-out forwards;
        }

        /* Clarity play button styles - must be at bottom to override inline styles */
        a[href*="clarity.microsoft.com"]:hover {
            background: rgba(147, 51, 234, 0.2) !important;
            border-color: rgba(147, 51, 234, 0.5) !important;
            transform: scale(1.05);
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 1.8rem;
            }

            .table-container {
                padding: 16px;
            }

            table {
                font-size: 0.9rem;
            }

            th, td {
                padding: 10px 12px;
            }
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div class="header">
            <h1>Audit Jobs</h1>
            <div style="display: flex; gap: 12px; flex-wrap: wrap; align-items: center;">
                <a href="/admin/preaudits" class="logout-btn" style="background: linear-gradient(90deg, rgba(74,222,128,0.1), rgba(34,197,94,0.1)); border-color: rgba(74,222,128,0.3); color: #4ade80; font-weight: 600;">üîç Preaudits</a>
                <button id="backupBtn" class="backup-btn">üõ°Ô∏è Create Backup</button>
                <a href="/admin" class="logout-btn">Back to Admin</a>
                <a href="/admin/logout" class="logout-btn">Logout</a>
            </div>
        </div>

        <div class="table-container">
            <div style="margin-bottom: 32px; display: flex; justify-content: center;">
                <a href="/admin/audits/new" style="
                    padding: 16px 40px;
                    border-radius: 12px;
                    background: linear-gradient(90deg, #ff7ee7, #6a82fb);
                    color: #fff;
                    text-decoration: none;
                    font-size: 1.1rem;
                    font-weight: 600;
                    transition: all 0.3s;
                    box-shadow: 0 4px 20px rgba(106,130,251,0.3);
                    border: none;
                    cursor: pointer;
                    text-align: center;
                ">
                    + New Audit
                </a>
            </div>
            <% if (!auditJobs || auditJobs.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-state-icon">üß©</div>
                    <p>No audit jobs yet</p>
                </div>
            <% } else { %>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Niche</th>
                            <th>City</th>
                            <th>URL</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Public URL</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% auditJobs.forEach(job => { %>
                            <tr id="row-<%= job.id %>" class="<%= job.status === 'ready_to_check' ? 'row-ready-to-check' : '' %>">
                                <td>#<%= job.id %></td>
                                <td><%= new Date(job.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %></td>
                                <td><%= job.niche %></td>
                                <td><%= job.city %></td>
                                <td><%= job.input_url %></td>
                                <td>
                                    <% if (job.emailSent) { %>
                                        <div style="display: flex; flex-direction: column; gap: 4px;">
                                            <span style="display: inline-flex; align-items: center; gap: 4px; padding: 3px 8px; border-radius: 4px; background: rgba(74, 222, 128, 0.1); border: 1px solid rgba(74, 222, 128, 0.3); color: #4ade80; font-size: 0.75rem; font-weight: 500;">‚úÖ sent</span>
                                            <% if (job.emailOpens > 0 || job.emailClicks > 0) { %>
                                                <div style="display: flex; gap: 8px; font-size: 0.7rem; color: #b6b6d6;">
                                                    <% if (job.emailOpens > 0) { %>
                                                        <span style="display: flex; align-items: center; gap: 3px;">
                                                            <span style="color: #60a5fa;">üëÅÔ∏è</span>
                                                            <span><%= job.emailOpens %></span>
                                                        </span>
                                                    <% } %>
                                                    <% if (job.emailClicks > 0) { %>
                                                        <span style="display: flex; align-items: center; gap: 3px;">
                                                            <span style="color: #4ade80;">üîó</span>
                                                            <span><%= job.emailClicks %></span>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            <% } %>
                                            <% if (job.pageViews > 0) { %>
                                                <div style="display: flex; align-items: center; gap: 6px; margin-top: 2px;">
                                                    <% if (job.claritySessionId) { %>
                                                        <a href="https://clarity.microsoft.com/projects/view/vaor3tcykv/sessions/<%= job.claritySessionId %>" 
                                                           target="_blank" 
                                                           title="Watch session recording in Microsoft Clarity"
                                                           style="display: flex; align-items: center; gap: 3px; padding: 2px 6px; border-radius: 4px; background: rgba(147, 51, 234, 0.1); border: 1px solid rgba(147, 51, 234, 0.3); color: #a78bfa; font-size: 0.7rem; text-decoration: none; transition: all 0.2s;">
                                                            <span>‚ñ∂Ô∏è</span>
                                                            <span><%= job.pageViews %></span>
                                                        </a>
                                                    <% } else { %>
                                                        <span style="display: flex; align-items: center; gap: 3px; font-size: 0.7rem; color: #b6b6d6;">
                                                            <span style="color: #a78bfa;">üëÄ</span>
                                                            <span><%= job.pageViews %></span>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            <% } %>
                                        </div>
                                    <% } else if (!job.hasEmail) { %>
                                        <span class="no-email-indicator">‚ö†Ô∏è No email</span>
                                    <% } else { %>
                                        <span style="color: #4ade80; font-size: 0.9rem;">‚úì</span>
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge <%= job.status === 'ready_to_check' ? 'badge-ready-to-check' : 'badge-status' %>">
                                        <%= job.status %>
                                    </span>
                                </td>
                                <td>
                                    <% if (job.public_page_slug) { %>
                                        <a href="/<%= job.public_page_slug %>?v=2" class="view-link" target="_blank">Open ‚Üí</a>
                                    <% } else { %>
                                        -
                                    <% } %>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="/admin/audits/<%= job.id %>" class="view-link">View ‚Üí</a>
                                        <button class="btn-delete" data-audit-id="<%= job.id %>" data-audit-url="<%= job.input_url || '' %>">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </div>

    <script>
        // Attach event listeners to all buttons
        document.addEventListener('DOMContentLoaded', function() {
            // Setup backup button
            const backupBtn = document.getElementById('backupBtn');
            if (backupBtn) {
                backupBtn.addEventListener('click', createBackup);
            }

            // Setup delete buttons
            const deleteButtons = document.querySelectorAll('.btn-delete');
            
            deleteButtons.forEach(button => {
                button.addEventListener('click', async function() {
                    const id = this.getAttribute('data-audit-id');
                    const url = this.getAttribute('data-audit-url');
                    
                    // First confirmation
                    const urlDisplay = url ? `\n\nURL: ${url}` : '';
                    const confirmFirst = confirm(`Are you sure you want to delete audit #${id}?${urlDisplay}`);
                    
                    if (!confirmFirst) {
                        return;
                    }
                    
                    // Second confirmation
                    const confirmSecond = confirm(`This will permanently delete all data for audit #${id}.\n\nThis action cannot be undone. Continue?`);
                    
                    if (!confirmSecond) {
                        return;
                    }
                    
                    // Show deleting state
                    const row = document.getElementById('row-' + id);
                    if (row) {
                        row.classList.add('deleting');
                    }
                    
                    try {
                        const response = await fetch('/admin/api/audits/' + id, {
                            method: 'DELETE',
                            headers: {
                                'Accept': 'application/json'
                            },
                            credentials: 'same-origin'
                        });
                        
                        // Check if session expired
                        if (response.status === 401) {
                            alert('Session expired. Please log in again.');
                            window.location.href = '/admin/login';
                            return;
                        }
                        
                        const data = await response.json();
                        
                        if (!response.ok) {
                            throw new Error(data.message || 'Failed to delete audit');
                        }
                        
                        // Successfully deleted - remove row after animation
                        if (row) {
                            setTimeout(() => {
                                row.remove();
                                
                                // Check if table is now empty
                                const tbody = document.querySelector('tbody');
                                if (tbody && tbody.children.length === 0) {
                                    // Reload page to show empty state
                                    window.location.reload();
                                }
                            }, 300);
                        }
                        
                    } catch (error) {
                        console.error('Error deleting audit:', error);
                        alert('Failed to delete audit: ' + error.message);
                        
                        // Remove deleting state if error
                        if (row) {
                            row.classList.remove('deleting');
                        }
                    }
                });
            });
        });

        // Create backup function
        async function createBackup() {
            const btn = document.getElementById('backupBtn');
            const originalText = btn.textContent;
            
            // Confirm action
            if (!confirm('Create database backup now?\n\nThis will backup the database and all assets (screenshots, logos, etc.)')) {
                return;
            }
            
            // Disable button and show loading state
            btn.disabled = true;
            btn.textContent = '‚è≥ Creating backup...';
            
            try {
                const response = await fetch('/admin/api/backup', {
                    method: 'POST',
                    headers: {
                        'Accept': 'application/json'
                    },
                    credentials: 'same-origin'
                });
                
                // Check if session expired
                if (response.status === 401) {
                    alert('Session expired. Please log in again.');
                    window.location.href = '/admin/login';
                    return;
                }
                
                const data = await response.json();
                
                if (!response.ok) {
                    throw new Error(data.error || 'Failed to create backup');
                }
                
                // Success!
                btn.textContent = '‚úÖ Backup created!';
                btn.style.background = 'linear-gradient(90deg, #16a34a, #15803d)';
                
                // Show detailed output in alert
                const output = data.output || '';
                const lines = output.split('\n').filter(l => l.trim());
                const backupFiles = lines.filter(l => l.includes('.db.gz') || l.includes('.tar.gz'));
                
                let message = '‚úÖ Backup created successfully!\n\n';
                if (backupFiles.length > 0) {
                    message += 'Files created:\n' + backupFiles.slice(-2).join('\n');
                } else {
                    message += 'Check server logs for details.';
                }
                
                alert(message);
                
                // Reset button after 3 seconds
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.disabled = false;
                }, 3000);
                
            } catch (error) {
                console.error('Backup error:', error);
                alert('‚ùå Backup failed: ' + error.message);
                
                // Reset button
                btn.textContent = originalText;
                btn.disabled = false;
            }
        }
    </script>
</body>
</html>

